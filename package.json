{
  "name": "notcolds-tests",
  "type": "module",
  "scripts": {
    "start": "run-p -l type-check:watch start:dev",
    "start:dev": "tsx --require dotenv/config --watch src/index.ts",
    "type-check": "tsc --noEmit --preserveWatchOutput",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --project tsconfig.prod.json"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "vi": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "dotenv": "^16.4.5",
    "@types/node": "^22.7.4",
    "@types/prompts": "^2.4.9",
    "npm-run-all": "^4.1.5",
    "prompts": "^2.4.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^2.1.9"
  }
}
